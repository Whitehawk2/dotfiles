#!/bin/bash
set -eufo pipefail

echo -e "\0033[0;32m>>>>> Begin Setting Up Rust <<<<<\033[0m"

if ! $(command -v rustup); then
  echo "installing rust"
{{ if eq .chezmoi.osRelease.id "debian" "ubuntu" -}}
{{  if ne .chezmoi.username "root" -}}
  sudo apt install -y curl
{{  else -}}
  apt install -y curl
{{  end -}}
  curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh && source {{ .chezmoi.homeDir }}/.cargo/env
{{ else if eq .chezmoi.osRelease.id "fedora" "suse" -}}
{{  if ne .chezmoi.username "root" -}}
  sudo dnf install -y curl
{{  else -}}
  dnf install -y curl
{{  end -}}
  curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh && source {{ .chezmoi.homeDir }}/.cargo/env
{{ end -}}
else
  echo "rust already installed"
fi

echo -e "\0033[0;32m>>>>> Finish Setting Up Rust <<<<<\033[0m"
